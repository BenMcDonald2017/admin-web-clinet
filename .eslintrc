{
    "extends": [
      "prettier"
    ],
    "plugins": [
      "standard",
      "promise",
      "import"
    ],
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module",
      "ecmaFeatures": {
        "experimentalObjectRestSpread": true
      }
    },
    "env": {
      "node": true,
      "mocha": true
    },
    "rules": {
      "generator-star-spacing": 1,
      "arrow-parens": 0,
      "no-unused-expressions": [
        2,
        {
          "allowShortCircuit": true,
          "allowTernary": true
        }
      ],
      "import/prefer-default-export": 0,
      "no-param-reassign": 0
    } 
  }